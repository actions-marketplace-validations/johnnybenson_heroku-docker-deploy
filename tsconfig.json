{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "target": "ES2021",
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
